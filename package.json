{
  "name": "asterixdb-js-connector",
  "version": "1.0.0",
  "description": "A JavaScript library for connecting to AsterixDB with MongoDB-like API and offline capabilities",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start-demo": "http-server demo -c-1",
    "start-example": "node examples/MongoLikeUsage.js",
    "docs": "jsdoc -c jsdoc.conf.json -r src -d docs",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "asterixdb",
    "database",
    "mongodb",
    "connector",
    "sql++",
    "nosql",
    "offline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "crypto": "^1.0.1",
    "events": "^3.3.0",
    "localforage": "^1.3.0",
    "localforage-driver-memory": "^1.0.5"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.52.0",
    "jsdoc": "^4.0.2",
    "mocha": "^11.1.0",
    "prettier": "^3.0.3",
    "sinon": "^19.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/asterixdb-js-connector.git"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
